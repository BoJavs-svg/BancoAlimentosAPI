{
    "version": 2,
    "builds": [
        {
            "src": "source/server.ts",
            "use": "@vercel/node",
            "config": { "includeFiles": ["source/**"] }
        }
    ],
    "headers": [
        {
          "source": "/(.*)",
          "headers": [
            {
              "key": "Access-Control-Allow-Origin",
              "value": "*"
            }
          ]
        }
      ],
    "routes": [
        {
            "src": "/controllers/(.*)",
            "dest": "source/controllers/post.ts" 
        },
        {
            "src": "/routes/(.*)",
            "dest": "source/routes/post.ts" 
        },
        {
            "src": "/(.*)",
            "dest": "source/server.ts" 
        }
    ]
}
